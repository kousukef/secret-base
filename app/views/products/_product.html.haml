.col-md-3
  .card.m-4
    = image_tag product.product_image[0].url, class: 'card-img-top'
    .card-body
      %h4.card-title
        = product.name
      %p.card-text
        = "¥ #{product.price}"
      = link_to '詳細', product_path(product), class: 'btn btn-outline-secondary'
      - if @exhibitor
        = link_to '編集', edit_product_path(product), class: 'btn btn-outline-secondary ml-5'
        = link_to '削除', product_path(product), method: :delete, data: { confirm: '削除してよろしいですか？' }, class: 'btn btn-outline-secondary'