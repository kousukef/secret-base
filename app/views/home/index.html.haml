/slide
.carousel.slide#slides{data: {ride: 'carousel'}}
  %ul.carousel-indicators
    %li.active{data: {target: '#slides', slide: {to: '0'}}}
    %li{data: {target: '#slides', slide: {to: '1'}}}
    %li{data: {target: '#slides', slide: {to: '2'}}}
  .carousel-inner
    .carousel-item.active
      = image_tag("slide0.jpg")
      .carousel-caption
        %h1.display-2
          Secret Base
        %h3
          there are what you want 
        %button.btn.btn-outline-light.btn-lg
          What You Can Do
        %button.btn.btn-primary.btn-lg
          = link_to 'get started', new_product_path
    .carousel-item
      = image_tag("slide1.jpg")
    .carousel-item
      = image_tag("slide2.jpg")
          
